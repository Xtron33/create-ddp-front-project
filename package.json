{
    "name": "create-ddp-project",
    "description": "Starter template for DDP projects",
    "author": "https://github.com/Xtron33",
    "license": "MIT",
    "version": "1.0.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Xtron33/create-ddp-front-project.git"
    },
    "homepage": "https://github.com/Xtron33/create-ddp-front-project",
    "bugs": {
        "url": "https://github.com/Xtron33/create-ddp-front-project/issues"
    },
    "bin": {
        "create-ddp-project": "./dist/index.js"
    },
    "scripts": {
        "build": "tsc && npm run copy-templates",
        "copy-templates": "rimraf dist/templates && npx cpx \"src/templates/**/*\" \"dist/templates\" --include-empty-dirs --include-hidden",
        "dev": "tsc --watch"
    },
    "dependencies": {
        "inquirer": "^12.9.2",
        "rimraf": "^6.0.1"
    },
    "type": "module",
    "devDependencies": {
        "@juanm04/cpx": "^2.0.1",
        "@types/inquirer": "^9.0.9",
        "@types/node": "^24.3.0",
        "typescript": "^5.9.2"
    }
}
